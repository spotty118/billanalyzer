{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "types": ["./deno.env.d.ts"]
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts",
    "dev": "deno run --watch --allow-net --allow-env index.ts",
    "test": "deno test --allow-net --allow-env"
  },
  "importMap": "import_map.json",
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}